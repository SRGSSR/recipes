<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Comment</key>
	<string>Created with Recipe Robot v1.1.2 (https://github.com/homebysix/recipe-robot)</string>
	<key>Description</key>
	<string>Downloads the latest version of PlatformM.</string>
	<key>Identifier</key>
	<string>com.github.srgssr.download.PlatformM+</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>PlatformM+</string>
	</dict>
	<key>MinimumVersion</key>
	<string>1.0.0</string>
	<key>Process</key>
	<array>
		<dict>
            <key>Processor</key>
            <string>URLTextSearcher</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>https://iconproaudio.com/product/platform-m-plus/</string>
                <key>re_pattern</key>
                <string>(https://s3.amazonaws.com/assets.icon-global.com/wp-content/uploads/2020/12/PlatformMPlus_and_XPlus_iMap_Mac_Setup_V2.+\.zip)</string>
		        <key>result_output_var_name</key>
		        <string>url</string>
        	</dict>
        </dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>filename</key>
				<string>%NAME%.zip</string>
				<key>url</key>
				<string>%url%</string>
			</dict>
			<key>Processor</key>
			<string>URLDownloader</string>
		</dict>
		<dict>
      		<key>Processor</key>
      		<string>Unarchiver</string>
      		<key>Arguments</key>
      	<dict>
        	<key>purge_destination</key>
			 <false/>
			 <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/unpack</string>
       	</dict>
		   </dict>
	        <dict>
            <key>Comment</key>
            <string>get the name of the unzipped pkg</string>
            <key>Processor</key>
            <string>FileFinder</string>
            <key>Arguments</key>
            <dict>
                <key>pattern</key>
                <string>%RECIPE_CACHE_DIR%/unpack/*.pkg</string>
            </dict>
			</dict>
		<dict>
            <key>Processor</key>
             <string>FileMover</string>
             <key>Arguments</key>
        <dict>
                <key>source</key>
                <string>%found_filename%</string>
                <key>target</key>
                <string>%RECIPE_CACHE_DIR%/downloads/%NAME%.pkg</string>
            </dict>
	  		</dict> 
		<dict>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/payload</string>
				<key>pkg_payload_path</key>
				<string>%RECIPE_CACHE_DIR%/downloads/PlatformM+.pkg/</string>
				<key>purge_destination</key>
				<false/>
			</dict>
			<key>Processor</key>
			<string>FlatPkgUnpacker</string>
			 <key>Arguments</key>
			 <dict>
			<key>flat_pkg_path</key>
			<string>%RECIPE_CACHE_DIR%/downloads/PlatformM+.pkg</string>
			<key>purge_destination</key>
			<false/>
		</dict>
		</dict>
		<dict>	
			<key>Arguments</key>
			<dict>
				<key>input_plist_path</key>
				<string>%RECIPE_CACHE_DIR%/payload/Platform_M+_and_X+.app/Contents/Info.plist</string>
				<key>plist_version_key</key>
				<string>CFBundleShortVersionString</string>
			</dict>
			<key>Processor</key>
			<string>Versioner</string>
		</dict>


	</array>
</dict>
</plist>
