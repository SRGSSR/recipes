<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Comment</key>
	<string>Created by Jens Junge 2021-06-29</string>
	<key>Description</key>
	<string>Downloads the latest version of MediaInfo GUI.</string>
	<key>Identifier</key>
	<string>ch.srgssr.pkg.download.MediaInfoGUI</string>
	<key>Input</key>
	<dict>
		<key>WEBSITE_URL</key>
		<string>https://mediaarea.net/en/MediaInfo/Download/Mac_OS</string>
		<key>SEARCH_PATTERN</key>
		<string>([0-9\.]+/MediaInfo_GUI_[0-9\.]+_Mac11.dmg)</string>
		<key>DOWNLOAD_URL</key>
		<string>https://mediaarea.net/download/binary/mediainfo-gui</string>
		<key>NAME</key>
		<string>MediaInfo</string>
	</dict>
	<key>MinimumVersion</key>
	<string>1.0.5</string>
	<key>Process</key>
		<array>
			<dict>
				<key>Processor</key>
				<string>URLTextSearcher</string>
				<key>Arguments</key>
				<dict>
					<key>url</key>
					<string>%WEBSITE_URL%</string>
					<key>re_pattern</key>
					<string>%SEARCH_PATTERN%</string>
					<key>result_output_var_name</key>
					<string>url</string>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>URLDownloader</string>
				<key>Arguments</key>
				<dict>
					<key>url</key>
					<string>%DOWNLOAD_URL%/%url%</string>
					<key>filename</key>
					<string>%NAME%.dmg</string>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>EndOfCheckPhase</string>
			</dict>
			<dict>
				<key>Processor</key>
				<string>CodeSignatureVerifier</string>
				<key>Arguments</key>
				<dict>
					<key>input_path</key>
					<string>%pathname%/MediaInfo.app</string>
					<key>requirement</key>
					<string>identifier "net.mediaarea.mediainfo.mac-old" and anchor apple generic and certificate 1[field.1.2.840.113635.100.6.2.6] /* exists */ and certificate leaf[field.1.2.840.113635.100.6.1.13] /* exists */ and certificate leaf[subject.OU] = C2SZ4M9843</string>
				</dict>
			</dict>
		</array>
</dict>
</plist>
